<!DOCTYPE html>
<html>
  <head>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 3px;
      }

      tr:nth-child(even) {
        background-color: #d4d4d4;
      }
      .header-form {
        text-align: center;
      }
    </style>
  </head>
  <body >
      <div class="main-wrapper">
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-box">
                            <h4 class="payslip-title">RÃ©sultat Test Laboratoire</h4>
                            <div class="row">
                                <div class="col-sm-6 m-b-20">
                                    <img src="assets/img/logo-dark.png" class="inv-logo" alt="">
                                    <ul class="list-unstyled mb-0">
                                        <li>{{entName}}</li>
                                        <li><%=entAddress%></li>
                                        <li><%=entCity%></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 m-b-20">
                                    <div class="invoice-details">
                                        <h4 class="text-uppercase"><%=patient%></h4>
                                        <ul class="list-unstyled">
                                            <li>Date : <span><%=date%></span></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <% data.forEach((info) => { %>
                                <div class="col-sm-6">
                                    <div>
                                        <h4 class="m-b-10"><strong><%=info.TestName%></strong></h4>
                                        <table class="table">
                                            <tbody>
                                                <% 
                                                let pos = 0;
                                                info.Parameters.forEach((testParameters) => { 
                                                %>
                                                    <tr>
                                                        <td>
                                                            <strong><%=testParameters.nom_examen%></strong> 
                                                            <span class="float-right"><%=info.Resultats[pos].resultat%></span>
                                                        </td>
                                                    </tr>
                                                <% pos++; }) %>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <% }) %>
                                <!-- <div class="col-sm-12">
                                    <p><strong>Net Salary: $59698</strong> (Fifty nine thousand six hundred and ninety
                                        eight only.)</p>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </body>
</html>
