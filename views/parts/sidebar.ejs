                    <a href="#"><i class="fa fa-wheelchair"></i> <span> Patients </span> <span
                            class="menu-arrow"></span></a>
                    <ul style="display: none;">
                        <% if(SUBMENU_ITEM_ACCESS.includes("Ajouter Patient") || SUBMENU_ITEM_ACCESS[0]=="All"){%>
                        <li><a class="<%=NewPatient%>" href="/add-patient">Nouveau </a></li>
                        <% } %>
                        <% if(SUBMENU_ITEM_ACCESS.includes("Liste des Patients") || SUBMENU_ITEM_ACCESS[0]=="All"){%>
                        <li><a class="<%=PatientsList%>" href="/patients">Liste des patients</a></li>
                        <% } %>
                    </ul>
                </li>
                <% } %>
                <!-- EXAMENS -->
                <% if(USER_MENU_ACCES.includes("Examens") || USER_MENU_ACCES[0]=="All"){%>
