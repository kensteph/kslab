%>
<div class="sidebar" id="sidebar">
    <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
            <ul>
                <li class="menu-title">Menu</li>
                <% if(USER_MENU_ACCES.includes("Tableau de bord") || USER_MENU_ACCES[0]=="All"){%>
                <li class="<%=Home%>">
                    <a href="/home"><i class="fa fa-dashboard"></i> <span>Tableau de bord</span></a>
                </li>
                <% } %>
                <!-- TEST LABORATOIRE -->
                <% if(USER_MENU_ACCES.includes("Test Patient") || USER_MENU_ACCES[0]=="All"){%>
                <li class="<%=NewTest%>">
                    <a href="/test-laboratoire"><i class="fa fa-flask"></i> <span>Test Patient</span></a>
                </li>
                <% } %>
                <!-- GESTION TEST LABORATOIRE -->
                <% if(USER_MENU_ACCES.includes("Test Laboratoire") || USER_MENU_ACCES[0]=="All"){%>
                <li class="submenu">
                    <a href="#"><i class="fa fa-folder"></i> <span>Test Laboratoire </span> <span
                            class="menu-arrow"></span></a>
                    <ul style="display: none;">
                        <% if(SUBMENU_ITEM_ACCESS.includes("Liste des Tests") || USER_MENU_ACCES[0]=="All"){%>
                        <li><a class="<%=ListTest%>" href="/Tests">Liste des Tests</a></li>
                        <% } %>
                    </ul>
                </li>
                <% } %>
                <!-- PATIENT -->
                <% if(USER_MENU_ACCES.includes("Patients") || USER_MENU_ACCES[0]=="All"){%>
