<!DOCTYPE html>
<html lang="en">


<!-- add-patient24:06-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
    <title><%=appName%>| <%=pageTitle%></title>
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <!-- HEADER -->
        <%- include("../parts/header") -%>
        <!-- SIDEBAR -->
        <%- include("../parts/sidebar") -%>
    </div>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h4 class="page-title"> <%=pageTitle%> </h4>
                </div>
            </div>
            <div class="row">
                
                <div class="col-lg-8 offset-lg-2">
                    <% if( locals.notifications){ %>
                        <div class="alert alert-<%= locals.notifications.type %> alert-dismissible fade show" role="alert">
                            <%= locals.notifications.msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    <% } %>

                    <% if( locals.data ){
                        buttonText = "Modifier";
                                nomExamen = data.prenom;
                                ifBilan = data.sexe;
                                typeResultat = data.statut;
                           %>

                    <% }else{   
                                buttonText = "Enregistrer";
                                nomExamen = "";
                                ifBilan = "";
                                typeResultat = "";
                           }
                            %>
                    <form method="POST" action="">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Nom <span class="text-danger">*</span></label>
                                    <input class="form-control" type="text" name="nomExamen" value="<%=nomExamen%>"
                                        required>
                                </div>
                            </div>
                            
                            <div class="col-sm-6 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>Bilan</label>
                                    <select class="form-control select" name="ifbilan">
                                        <option value="0" <% if(ifBilan == 0 ){ %> selected <% } %>>Non</option>
                                        <option value="1" <% if(ifBilan == 1 ){ %> selected <% } %>>Oui</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-6 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>Type résultat</label>
                                    <select class="form-control select" name="typeResultat">
                                        <option value="1" <% if(typeResultat == 1 ){ %> selected <% } %>>Valeurs normales</option>
                                        <option value="2" <% if(typeResultat == 2 ){ %> selected <% } %>>Positif/Négatif</option>
                                        <option value="3" <% if(typeResultat == 3 ){ %> selected <% } %>>Commentaires</option>
                                    </select>
                                </div>
                            </div>
                            
                                <% if( locals.data ){ %>
                                <input type="hidden" name="patientID" value="<%=data.id%>">
                                <div class="form-group">
                                    <label class="display-block">Statut</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="status" id="patient_active"
                                            value="1" <% if(statut  == 1 ){ %> checked <% } %>>
                                        <label class="form-check-label" for="patient_active">
                                            Actif
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="status" id="patient_inactive"
                                            value="0" <% if(statut  == 0 ){ %> checked <% } %>>
                                        <label class="form-check-label" for="patient_inactive">
                                            Inactif
                                        </label>
                                    </div>
                                </div>
                                <% } %>
                                <div class="m-t-20 text-center">
                                    <button class="btn btn-primary submit-btn"><%=buttonText%></button>
                                </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="assets/js/jquery-3.2.1.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="assets/js/app.js"></script>
</body>

</html>