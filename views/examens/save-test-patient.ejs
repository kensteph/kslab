<!DOCTYPE html>
<html lang="en">


<!-- appointments23:19-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
    <title>Preclinic - Medical & Hospital - Bootstrap 4 Admin Template</title>
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <!-- HEADER -->
        <%- include("../parts/header") -%>
        <!-- SIDEBAR -->
        <%- include("../parts/sidebar") -%>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-12 col-12">
                        <h4><%=pageTitle%> </h4>
                        <h4 class="page-title">
                            <i class="fa fa-folder-open-o"></i> <%=patientSelected.num_patient%> |
                            <%=patientSelected.fullname%> </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table">
                                <thead>
                                    <tr>
                                        <th>ID Examen</th>
                                        <th>Examen</th>
                                        <th>Résultat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((info) => { %>
                                    <tr>
                                        <td><%=info.id%></td>
                                        <td> <i class="fa fa-flask"></i> <%=info.nom_examen%></td>
                                        <td><a href="#" class="btn btn-white"
                                                onclick="launchSaveTestModal('<%=info.id%>','<%=info.nom_examen%>')">Enregistrer
                                                Résultat</a></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="addRemoveUnit" class="modal fade" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Résultat du test <strong id="materiauName"></strong> | <%=patientSelected.dossier%> </h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <form id="addRemoveStockForm">
                                <input type="hidden" id="testId" name="materiauId">
                                <input type="hidden" id="materiau" name="materiauName">
                                <input type="hidden" id="lot" name="lot">
                                <div class="form-inline" id="Resultat">

                                </div>
                                <div id="notify" class="m-t-20 text-center"></div>
                                <div class="m-t-20 text-center">
                                    <button class="btn btn-primary submit-btn">Enregistrer</button>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="assets/js/jquery-3.2.1.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/js/app.js"></script>
    <script>
        $("#addRemoveStockForm").submit(function (e) {
            e.preventDefault();
            addorRemoveStock();
        });
        function launchSaveTestModal(testId, testName) {
            $("#materiauName").html(testName);
            $("#testId").val(testId);
            let fields = "";

            $.post("/get-test-parameters", { examID: testId }, function (data) {
                for (item of data) {
                    console.log(item); //item.id_param_exam
                    let pos_neg = "<div class='col-sm-6 col-md-6 col-lg-6'><select class='form-control select' name='type'><option value=''>---</option> <option value='Positif'>Positif</option><option value='Négatif'>Négatif</option></select></div>";
                    let fieldsVN = "<div class='col-sm-6 col-md-6 col-lg-6 m-b-10'><input type='text' name=test[] placeholder='" + item.nom_examen + "' class='form-control'></div>";
                    let comment = "<div class='col-sm-6 col-md-6 col-lg-6 m-b-10'><textarea cols='30' rows='4' class='form-control' name='commentaire[]' placeholder='" + item.nom_examen + "'></textarea></div>";
                    let appropriateField = "";
                    if (item.type_resultat == 1) { //Valeur Normale
                        appropriateField = fieldsVN;
                    } else if (item.type_resultat == 2) { // Positif Negatif
                        appropriateField = pos_neg;
                    } else { //Commentaire
                        appropriateField = comment;
                    }
                    fields += appropriateField;
                }
                $("#Resultat").html(fields);
            });

            $("#addRemoveUnit").modal();
        }
    </script>
</body>


